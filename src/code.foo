let heap = GetProcessHeap();
let ARENA_BLOCK_SIZE = 1024;

struct Arena {
    data: *u8;
    used, capacity: u64;
}

fn arena_new(arena: *Arena, size: u64) -> *u8 {
    if (arena.data == null) {
        arena.data = HeapAlloc(heap, 0, ARENA_BLOCK_SIZE);
        arena.used = 0;
        arena.capacity = ARENA_BLOCK_SIZE;
    }

    let result = arena.data + arena.used;
    arena.used += size;
    assert(arena.used <= arena.capacity, "arena.used <= arena.capacity");
    return result;
}


